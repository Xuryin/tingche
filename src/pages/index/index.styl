.stopping-page
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  display flex
  flex-direction row


/*停车场使用统计*/
.stopping-left
  width 500px
  border 1px solid white

  .stopping-left-top
    width 500px
    height 280px


  .top-statistics-content
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-items center

    >div:nth-child(1), >div:nth-child(2)
      border 1px solid yellow
      width 180px
      height 72px

    >div:nth-child(2)
      margin-left  20px

    >div:nth-child(n+3)
      border 1px solid red
      width 140px
      height 72px
      margin-right 10px


    .statistics-content-item
      display flex
      flex-direction column
      color white
      margin-top 20px

/*左中*/
.stopping-left-center
  border 1px solid white
  height 300px
  width 100%

/*左下底部pie图*/
.bottom-pie
  width: 455px;
  height 400px
  margin-right: 30px;






/*中间部分*/
.stopping-center
  width 900px
  border 1px solid white



  .center-map
    height 600px
    width 100%
    border 1px solid white

  .center-line
    border 1px solid white


  .center-line-content
    border 1px solid white
    height 400px
    display flex
    flex-direction row
    justify-content space-around

  .center-line-line
    width 50%

/*右边*/
.stopping-right
  width 500px
  border 1px solid white



