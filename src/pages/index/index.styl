.stopping-page
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  display flex
  flex-direction row


/*停车场使用统计*/
.stopping-left
  width 500px
  border 1px solid white

  .stopping-left-top
    width 433px
    height 280px


  .top-statistics-content
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-items center

    >div:nth-child(1), >div:nth-child(2)
      border 1px solid yellow
      width 180px
      height 72px

    >div:nth-child(2)
      margin-left  20px

    .statistics-content-item
      width 50%
      display flex
      flex-direction column
      color white
      border 1px solid yellow

