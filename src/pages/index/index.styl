.stopping-page
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  display flex
  flex-direction row
  margin-top 15px


/*停车场使用统计*/
.stopping-left
  border 1px solid white
  margin-left 20px

  .stopping-left-top

  .top-statistics-content
    width 480px
    height 311px
    display flex
    flex-direction column
    justify-content center
    align-items center
    background: rgba(7,20,58,0.85);
    border: 1px solid #29A7F2;
    box-shadow: inset 0 1px 24px 6px #07447D;
    border-radius: 9px;


    .content-box-content
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content space-around
      align-items center
      margin-top 20px

      >div:nth-child(1), >div:nth-child(2)
        border 1px solid yellow
        width 215px
        height 69px


      >div:nth-child(n+3)
        border 1px solid red
        width 139px
        height 69px


    .statistics-content-item
      display flex
      flex-direction column
      color white
      margin-top 15px

/*左中*/
.stopping-left-center
  border 1px solid white
  height 300px
  width 100%

/*左下底部pie图*/
.bottom-pie
  width: 455px;
  height 400px
  margin-right: 30px;






/*中间部分*/
.stopping-center
  width 900px
  border 1px solid white



  .center-map
    height 600px
    width 100%
    border 1px solid white

  .center-line
    border 1px solid white


  .center-line-content
    border 1px solid white
    height 400px
    display flex
    flex-direction row
    justify-content space-around

  .center-line-line
    width 50%

/*右边*/
.stopping-right
  width 500px
  border 1px solid white



