.content-box-container
  /*background-color: rgba(255,255,255,0);*/
  position relative
  box-sizing: border-box;
  background: rgba(7,20,58,0.85);
  border: 1px solid #29A7F2;
  box-shadow: inset 0 1px 24px 6px #07447D;
  border-radius: 9px;
  display flex
  flex-direction column
  justify-content center
  align-items center

.content-box-header
  position absolute
  top 0
  width 234px
  height 42px
  background-image: url("../../assets/images/title.svg");
  background-repeat: no-repeat;
  background-size: 100%;

  p
    font-family: PingFangSC-Semibold;
    font-size: 20px;
    color: #CBDEF4;
    letter-spacing: 0;
    text-align: center;
    text-shadow: 1px 1px 2px #0C55DF;
