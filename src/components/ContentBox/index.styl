.content-box-container
  /*background-color: rgba(255,255,255,0);*/
  position relative
  box-shadow: inset 0 0 3px 1px rgba(0,108,236,0.75);
  padding: 8px;
  box-sizing: border-box;

.content-box-header
  position absolute
  top 0
  width 234px
  height 42px
  background-image: url("../../assets/images/title.svg");
  background-repeat: no-repeat;
  background-size: 100%;
  border 1px solid white

  p
    font-family: PingFangSC-Semibold;
    font-size: 20px;
    color: #CBDEF4;
    letter-spacing: 0;
    text-align: center;
    text-shadow: 1px 1px 2px #0C55DF;
