.incident-item
  height 60px
  width 33%
  display flex
  flex-direction row
  justify-content flex-start
  align-items center

  .incident-item-img
    width 30%
    padding-left 30px

  .incident-item-content
    width 70%
    font-family: PingFangSC-Medium;
    font-size: 16px;
    display flex
    flex-direction column
    cursor pointer

    span
      border 1px solid transparent

     >span
       display block
       padding-left 10px

    >span:nth-child(1)
      height 25px
      font-size: 16px;
      color: #CBDEF4;
      line-height 25px

    >span:nth-child(2)
      height 35px
      font-size: 20px;
      color: #19D6FF;
      line-height 35px

    .incident-per
      font-size 14px

.modal-table-title
  display flex
  justify-content flex-start
  align-items center

  span
    font-family: PingFangSC-Medium;
    font-size: 24px;
    color: #CBDEF4;
    letter-spacing: 0;
    margin-left 20px

.modal-table-content
  margin-top 30px

  .table-content-title
    width 100%
    height 46px
    background: rgba(5,59,143,0.66);
    display flex
    flex-direction row
    justify-content center

    >span
      height 46px
      line-height 46px
      font-size: 18px;
      color: #CBDEF4;
      padding-left 30px
      text-align left
      box-shadow: inset 0 0 3px 0 #0882FF;

    >span:nth-child(1)
      width 15%
    >span:nth-child(2)
      width 30%

    >span:nth-child(3)
      width 30%
    >span:nth-child(4)
      width 25%

      .title-per
        font-size 14px

.table-content-content
  height 420px


  .table-content-item
    display flex
    flex-direction row
    justify-content center

    >span
      height 46px
      line-height 46px
      font-size: 18px;
      color: #CBDEF4;
      padding-left 30px
      text-align left
      box-shadow: inset 0 0 3px 0 #0882FF;

    >span:nth-child(1)
      width 15%
    >span:nth-child(2)
      width 30%

    >span:nth-child(3)
      width 30%
    >span:nth-child(4)
      width 25%